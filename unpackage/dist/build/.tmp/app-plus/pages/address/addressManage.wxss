page {
  background: whitesmoke;
}
.right-del {
  position: fixed;
  top: 0;
  right: 0;
  padding: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  z-index: 999;
}
.content /deep/ .uni-checkbox-input {
  border-radius: 100%;
}
.content /deep/ .uni-checkbox-input-checked {
  color: #fff !important;
  background-color: #fa436a;
}
.content {
  margin: 30rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  height: 563rpx;
}
.content .phone {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    height: 140rpx;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    border-bottom: 1rpx solid #e0e7eb;
}
.content .phone text {
      width: 172rpx;
      height: 140rpx;
      font-size: 30rpx;
      font-family: PingFangSC-Regular;
      font-weight: 400;
      color: #4a4a4a;
      text-align: center;
      line-height: 140rpx;
}
.content .phone .name {
      width: 450rpx;
      height: 80rpx;
      border-radius: 10rpx;
      border: 2rpx solid #e4e4e4;
}
.content .phone .name .regise {
        line-height: 80rpx;
        padding-left: 25rpx;
        color: #9b9b9b;
}
.content .phone .name input {
        padding: 15rpx 0 20rpx 30rpx;
        font-size: 28rpx;
        font-family: PingFangSC-Regular;
        font-weight: 400;
}
.content .set {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    margin: 20rpx  0  0 0;
}
.content .set text {
      font-size: 30rpx;
      font-family: PingFangSC-Regular;
      font-weight: 400;
      color: #4a4a4a;
}
.content .set .set-box {
      margin-left: 30rpx;
}
.content .set .set-box .radio {
        width: 18rpx;
        height: 18rpx;
}
.content .flex-blue {
    margin-top: 60rpx;
    height: 80rpx;
    margin: 150rpx 85rpx 0 85rpx;
}
.content .flex-blue button {
      background: #ff5847;
}

