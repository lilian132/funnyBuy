/* 输入框 */
.uni-flex {
  padding: 30rpx 30rpx;
}
.uni-flex .flex-red {
    height: 100rpx;
    border-radius: 10rpx 10rpx 10rpx 10rpx;
    border: 1px solid #e4e4e4;
}
.uni-flex .flex-red input {
      line-height: 100%;
      width: 100%;
      height: 100%;
      padding-left: 20rpx;
}
.uni-flex .flex-yellow {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}
.uni-flex .flex-yellow .flex-green {
      margin-top: 30rpx;
      width: 486rpx;
      height: 100rpx;
      border-top: 1px solid #e4e4e4;
      border-left: 1px solid #e4e4e4;
      border-bottom: 1px solid #e4e4e4;
      border-radius: 10rpx 0rpx 0rpx 10rpx;
      position: relative;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
}
.uni-flex .flex-yellow .flex-green input {
        line-height: 100%;
        width: 100%;
        height: 100%;
        padding-left: 20rpx;
}
.uni-flex .flex-yellow .forget {
      position: absolute;
      right: 0rpx;
      margin-top: 30rpx;
      margin-right: 30rpx;
      width: 204rpx;
      height: 100rpx;
      color: #ff5847;
      border-radius: 0rpx 10rpx 10rpx 0rpx;
      border: 2rpx solid #ff5847;
      font-size: 24rpx;
      font-family: PingFangSC-Regular;
      font-weight: 400;
      line-height: 100rpx;
      text-align: center;
}
